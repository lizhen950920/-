/* pages/Xinxin/search.wxss */

.search-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border: 1rpx solid #797979;
  padding: 10rpx 16rpx;
  border-radius: 60rpx;
  margin-top: 50rpx;
  width: 90%;
  height: 30px;
  text-align: center;
}
.search-item1{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 50rpx;

}
.search-button-view{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 16rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  width: 90%;
  height: 30px;
}

.search-item input{
width: 100%;
}
.search-item text:nth-child(1){
  width: 30%;
  font-size: 28rpx;
  color: #aaa;
}
.item-right{
  display: flex;
  justify-content: space-between;
  align-items: center;

}

.label{
  border: 1rpx solid #797979;
  margin-right: 15rpx;
  font-size: 24rpx;
padding: 0rpx 20rpx 0rpx 20rpx;
  color: #333333;
  background: #FFFFFF;
  border-radius: 40rpx;
}

.label-selected{
  border: 1rpx solid #0066FF;

  background: #0066FF;
  margin-right: 15rpx;
  font-size: 24rpx;
padding: 0rpx 20rpx 0rpx 20rpx;
  color: white;
  border-radius: 40rpx;
}
.new-search{
  border: 3rpx solid #0066FF;
  background: #0066FF;
  color: white;
  padding: 15rpx 30rpx 15rpx 30rpx;
  border-radius: 50rpx;
}
.hometype{
border: 3rpx solid #797979;
color: white;
background: #797979;
flex: 1;
margin-left: 30rpx;
border-radius: 40rpx;
padding: 5rpx 20rpx 5rpx 20rpx;

}
.clikhometype{
  border: 3rpx #008000 solid;
  background: #008000;
  color: white;
  flex: 1;
  margin-left: 30rpx;
border-radius: 40rpx;
padding: 5rpx 20rpx 5rpx 20rpx;
}
.clikbudget{
  border: 3rpx #0066FF solid;
  background: #0066FF;
  color: white;
   flex: 1;
  margin-left: 40rpx;
border-radius: 40rpx;
padding: 5rpx 20rpx 5rpx 20rpx;
}
.notselect{
border: 3rpx solid #797979;
color: #333333;
background: #FFFFFF;
flex: 1;
margin-left: 40rpx;
border-radius: 40rpx;
padding: 5rpx 20rpx 5rpx 20rpx;

}
.budget{
  border: 3rpx solid #797979;
  border-radius: 40rpx;
  background: #FFFFFF;
  padding-top: 10rpx;
  padding-left: 20rpx;
  margin-top: 40rpx; 
  line-height: 60rpx;
  width: 90%;
  display: flex;
}