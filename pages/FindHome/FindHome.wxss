page{
    width: 99.5%;
    height: 99.6%;
    font-size: 12px;
    color: #8B8B8B;
}

.search-top{
    position: fixed;
    top: 0;
    background-color: #82C435;
    width: 100%;
    height: 80rpx;
    color: #FFF;
    z-index: 6; 
    font-size: 14px;
}

.search-nav{
    float: left;
    /*margin: 10rpx; */
     width:30%; 
    line-height: 60rpx;
    text-align: center; 
}
.searche-btn2{
  width:20px;height:20px;float:right;margin-right:10px;
}
.search-img{
    /* margin: 10rpx 0; */
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 30rpx;
    width: 63%;
    float: left;
    background-color: #D9E9A3;
    box-shadow: 2rpx 2rpx 20rpx #C6EC86;
    margin-top:5rpx;

}

.search-icon{
    margin: 12rpx 20rpx;
    float: left;
}

.searchs{
    font-size: 13px;
    color: #82C435;
    line-height: 80rpx;
}

.search-img input{
    z-index: 10;
    line-height: 60rpx;
    height: 60rpx;
}

.search-top > view:nth-of-type(2){
    float: right;
    margin-right: 10rpx; 
    
    line-height: 60rpx;
    text-align: center; 
}

.search-list{
    padding-top: 81rpx;
}

.list-list{
    width: 100%;
    height: 280rpx;
    font-size: 12px;
    background-color: #FFF;
    border-bottom: 5px solid #ECECEC;
}
.quyu{
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.list-left{
    float: left;
    width: 36%;
    text-align: center;
}

.list-left > image{
    width: 180rpx;
    height: 150rpx;
    margin: 20rpx 0;
    border-radius:8rpx;

}

.list-right{
    float: right;
    width: 64%;
}

.list-right view:nth-of-type(1){
    font-size: 14px;
    margin: 20rpx 0 1rpx 0;
    /* line-height: 50rpx; */
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.list-right view:nth-of-type(2){
    color: #DDDDDD;
    line-height: 60rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.list-right view:nth-of-type(3){
    color: #DDDDDD;
    line-height: 35rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.list-right view:nth-of-type(4){
    line-height: 20px;
    color: #E03462;
    font-size: 14px;
}

.list-bottom{
    clear: both;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
}

.list-bottom > image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    float: left;
    margin: 10rpx 40rpx;
}

.list-bottom > text:nth-of-type(1){
    float: left;
    color: #8E8E8E;
}

.list-bottom > text:nth-of-type(2){
    margin-left: 30rpx;
    color: red;
}
.list-bottom > text:nth-of-type(3){
    float: right;
    margin-right: 30rpx;
    color: #DDDDDD;
}