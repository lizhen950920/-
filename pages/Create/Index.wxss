
.create-view{
  background-color: #aaa;
  display: flex;
  flex-direction: column;
  align-items:center;
  justify-content:center;

}
.create-item{
  display: flex;
  flex-direction:column;
  align-items:center;
  padding:10px 10px;
  margin-top:12px;

}
.create-view-title{
  color: white;
  font-size: 20px;
  justify-content: center;
  text-align: center;
  position: relative
}

.create-item-top{
  display: flex;
  justify-content: space-around;
  align-items:center;

}
.create-item-title{
  width:53px;
  margin-right: 5px;
  background-color: orange;
  border-radius: 61px;
  border: 1px solid orange;
  text-align:center;
  color: white;
  padding: 20px 7px;
}



.create-item-image{
  width: 70px;
  height: 70px;
}

.create-item-body{
  justify-content: center;
  font-size: 13px;
  color: white;
  padding:10px 10px;
  line-height: 20px;

}

.create-item-footer{
  justify-content: center;
  font-size: 14px;
  color: white;
  margin-top: 10px;
}

.line{
  border-bottom: 1px solid #fff;
  padding:10px 0 10px 0;
  width: 100%;
}