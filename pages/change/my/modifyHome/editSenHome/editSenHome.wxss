.xx_ui {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
    background: #fff;
}

.xx_left {
    float: left;
    width: 66%;
    padding-left: 30rpx;
}

.xx_left1 {
    float: left;
    width: 20%;
    padding-left: 30rpx;
}

.xx_right {
    float: right;
    width: 34%;
}

.xx_right1 {
    position: relative;
    float: right;
    width: 76%;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.xx_right1:after {
    content: "";
    display: block;
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #8c8e91;
    border-left: 0;
    border-bottom: 0;
    transform: rotate(45deg);
    position: absolute;
    right: 10rpx;
    top: 30rpx;
    z-index: 1;
}

.xx_btn {
    display: flex;
    height: 100rpx;
