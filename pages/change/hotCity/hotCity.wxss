Page{
  height: 100%;
  background: #ffffff;
}
.city_box{
  height:100%;
  background: #fff;
  display: flex;
}
.city_left{
  flex: 1;
}
.city_right{
  width: 30rpx;
  margin-left: 5rpx;
  /* display: flex; */
  flex-direction: column;
  /* justify-content: space-around; */
  margin-top: 320rpx;
}
.letter_item{
  flex: 1;
  display: block;
  font-size: 24rpx;
  color: #33B9FF;
  /* text-align: center; */
  height: 60rpx;
  line-height: 60rpx;
}
.city_locate,.national{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 25rpx;
}
.city_locate_title{
  color: #999;
  margin-right: 20rpx;
}
.new_city{
  /* background: #efefef; */
  font-size: 28rpx;
}
.new_city_title{
  height: 60rpx;
  line-height: 60rpx;
  color: red;
  margin-left: 20rpx;
  border-bottom: 2rpx solid #666;
  padding-left: 25rpx;
  margin-bottom: 20rpx;
}
.new_city_box{
  display: flex;
  flex-wrap: wrap;
}
.new_city_text{
  width: 150rpx;
  text-align: center;
  line-height: 50rpx;
  background: #fff;
  border: 2rpx solid #333;
  border-radius: 35rpx;
  margin:0 0 22rpx 22rpx;
  color: #333;
  font-size: 26rpx;
}
.city_first_letter{
  line-height: 40rpx;
  height: 40rpx;
  font-weight: bold;
  padding-left: 25rpx;
  font-size: 28rpx;
  background: #eee;
  color: #666;
}
.city_name{
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 25rpx;
}
.btn{
  width: 90%;
  margin-left: 40rpx;
  border: 2rpx solid #82C435;
  background: #82C435;
  font-size: 28rpx;
  color: white;
  margin-top: 100rpx;
}