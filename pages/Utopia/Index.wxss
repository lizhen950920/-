/* pages/Utopia/Index.wxss */

.img {
  width: 100%;
}

.title {
  font-size: 20px;
}

.head-info {
  line-height: 1.3;
  padding: 0 5px;
}

.head-info text {
  font-size: 18px;
  color: orange;
}

.orang-color {
  background-color: coral;
  color: white;
  border: 1px solid coral;
  border-radius: 20px;
  padding: 2%;
  margin: 4px 0;
  text-align: center;
}

.row-center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  padding: 5px 0;
}

.text-underline {
  padding-right: 15px;
  text-decoration: underline;
  padding-left: 20rpx;
  color: #169bd5;
}

.utopia-line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.utopia-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 5px;
  height: 400rpx;
  position: relative;
}

.utopia-item2 {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 5px;
  height: 430rpx;
  position: relative;
}

.utopia-img {
  width:278rpx;
  height: 230rpx;
  border-radius: 18px;
}

.utopia-text {
  margin-top: 8px;
  padding: 0px 5px;
  line-height: 1.3;
  font-size: 32rpx;
}

.utopia-desc {
  margin-top: 8px;
  padding: 0px 5px;
  line-height: 1;
  font-size: 32rpx;
}

.utopia-lock {
  position: absolute;
  width: 53rpx;
  height: 58rpx;
  top: 40%;
  left: 40rpx;
}

.btn {
  position: absolute;
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  top: 50%;
  left: 50rpx;
  font-size: 24rpx;
  color: white;
  background: #f90;
  border-radius: 40rpx;
}

.footer-text {
  color: green;
  margin-top: 6px;
  margin-bottom: 10px;
}
.num_color{
  color: red;
}
.utopia-button{
  background-color: #f90;
    border: 1px solid #f90;
}