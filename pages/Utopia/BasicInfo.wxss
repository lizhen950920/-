/* pages/Utopia/BasicInfo.wxss */

.item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 16rpx;
  border-radius: 10rpx;
  width: 90%;
  height: 30px;
}
.sex-img{
width:26rpx;
height:26rpx;
margin-left:10rpx;
}

.sex{
  display: flex;
  flex-direction: row;
}
.item-column {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 10rpx 16rpx;
  border-radius: 10rpx;
  width: 90%;
}

.header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header image {
  width: 100px;
  height: 100px;
  border-radius: 50px;
  margin-top: 10px;
  margin-bottom: 10px;
}

.item text:nth-child(1) {
  width: 24%;
  font-size: 30rpx;
  color: black;
}

.item-right {
  display: flex;
  align-items: center;
  flex: 1;
}

.text-middle {
  display: flex;
  justify-content: center;
  flex: 1;
}

.input-text {
  border: 1rpx solid #bbb;
  border-radius: 18px;
  justify-content: flex-start;
  padding: 2px 9px;
  width: 470rpx;
  text-align: center;
  align-items: center;
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;

}

.textarea-class {
  border: 1rpx solid #bbb;
  border-radius: 14px;
  justify-content: flex-start;
  padding: 9px;
  width: 93%;
  margin-top: 4px;
}

.textarea-text {
  margin-bottom: 5px;
}

.picker {
  position: relative;
  border: 2rpx solid #bbb;
  border-radius: 40rpx;
  justify-content: flex-start;
  padding: 2px 9px;
  width: 250rpx;
  text-align: center;
  align-items: center;
  height: 45rpx;
  line-height: 45rpx;
}
.picker_bir {
  position: relative;
  border: 2rpx solid #bbb;
  border-radius: 40rpx;
  justify-content: flex-start;
  padding: 2px 9px;
  width: 250rpx;
  text-align: center;
  align-items: center;
  height: 55rpx;
  line-height: 55rpx;
}
.picker_bir:after{
  content: "";
  display: block;
  width: 15rpx;
  height: 15rpx;
  border: 4rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(135deg);
  position: absolute;
  right: 25rpx;
  top: 10rpx;
  z-index: 1;
}
.picker:after{
  content: "";
  display: block;
  width: 15rpx;
  height: 15rpx;
  border: 4rpx solid #8c8e91;
  border-left: 0;
  border-bottom: 0;
  transform: rotate(135deg);
  position: absolute;
  right: 25rpx;
  top: 10rpx;
  z-index: 1;
}
.item-right {
  justify-content: flex-start;
}
.utopia-button{
  background-color: #f90;
    border: 1px solid #f90;
}